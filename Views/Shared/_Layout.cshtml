<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnDWebpage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DnDWebpage.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Medieval Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/images/dndiconhome.png" />



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />


    <!-- Retro Styling -->
    <link rel="stylesheet" href="~/css/retro.css" />
    <audio id="click-sound" src="~/sounds/click.mp3" preload="auto"></audio>

    <link rel="stylesheet" href="~/css/battle.css" />

    <style>
        /* Darker Retro Navbar Styling */
        /* Red Navbar Styling */
        .navbar {
            background: linear-gradient(45deg, #8b0000, #b22222); /* Deep red gradient */
            font-family: 'MedievalSharp', sans-serif;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.8);
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #fff; /* White text */
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
        }

            .navbar-brand:hover {
                color: #ffcc00; /* Highlighted gold on hover */
                text-shadow: 3px 3px 7px rgba(0, 0, 0, 0.8);
            }

        .nav-link {
            font-size: 1.2rem;
            color: #fff; /* White text */
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ffcc00; /* Gold on hover */
                text-shadow: 2px 2px 5px rgba(255, 204, 0, 0.7);
            }

        .navbar-toggler-icon {
            background-color: #ffcc00; /* Gold for the toggler icon */
        }

        .navbar-collapse {
            background: #8b0000; /* Same deep red as navbar */
            border-radius: 8px;
        }

            .navbar-collapse a {
                color: #fff; /* White text */
            }

                .navbar-collapse a:hover {
                    color: #ffcc00; /* Gold on hover */
                }

        .dropdown-menu {
            background: #8b0000; /* Dark red for the dropdown menu */
            border: 1px solid #ffcc00; /* Gold border */
            border-radius: 5px;
        }

        .dropdown-item {
            color: #fff; /* White text */
            font-family: 'MedievalSharp', serif;
        }

            .dropdown-item:hover {
                background-color: #b22222; /* Lighter red on hover */
            }

        /* Avatar styling */
        .avatar-topnav {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #b22222;
            box-shadow: 0 0 5px rgba(255, 0, 0, 0.8);
        }

        /* Logout Toast */
        .logout-toast {
            position: fixed;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            background: url('/images/parchment-background.jpg') center/cover no-repeat;
            color: #f8f8e1; /* Light parchment */
            font-family: 'Cinzel Decorative', serif;
            font-size: 1.15rem;
            padding: 1rem 2rem 1rem 2.5rem;
            border: 3px double #993333; /* Dark red border */
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 240, 200, 0.8);
            z-index: 10000;
            animation: toastFadeIn 0.8s ease-out;
            transition: opacity 1s ease-in-out;
            text-shadow: 1px 1px 2px #000;
        }

            .logout-toast .close-toast {
                position: absolute;
                top: 6px;
                right: 10px;
                background: none;
                border: none;
                font-size: 1.3rem;
                color: #ff4040;
                cursor: pointer;
                font-weight: bold;
            }

                .logout-toast .close-toast:hover {
                    color: #ff0000;
                }

        @@keyframes toastFadeIn {
            from

        {
            opacity: 0;
            transform: translateX(-50%) translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

        }

        .logout-toast {
            position: fixed;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            background: url('/images/parchment-background.jpg') center/cover no-repeat;
            color: #f8f8e1;
            font-family: 'Cinzel Decorative', serif;
            font-size: 1.15rem;
            padding: 1rem 2rem 1rem 2.5rem;
            border: 3px double #993333;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 240, 200, 0.8);
            z-index: 10000;
            animation: toastFadeIn 0.8s ease-out;
            transition: opacity 0.8s ease-in-out;
            text-shadow: 1px 1px 2px #000;
        }

            .logout-toast .close-toast {
                position: absolute;
                top: 6px;
                right: 10px;
                background: none;
                border: none;
                font-size: 1.3rem;
                color: #ff4040;
                cursor: pointer;
                font-weight: bold;
            }

                .logout-toast .close-toast:hover {
                    color: #ff0000;
                }

        .logout-toast {
            position: fixed;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            background: url('/images/parchment-background.jpg') center/cover no-repeat;
            color: #f8f8e1;
            font-family: 'Cinzel Decorative', serif;
            font-size: 1.2rem;
            padding: 1.2rem 2rem;
            border: 3px double #aa4a44;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 240, 200, 0.8);
            z-index: 10000;
            animation: toastFadeIn 0.8s ease-out;
            transition: opacity 1s ease-in-out;
            text-shadow: 1px 1px 2px #000;
        }

            .logout-toast .logout-text {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .logout-toast .close-toast {
                position: absolute;
                top: 6px;
                right: 10px;
                background: none;
                border: none;
                font-size: 1.3rem;
                color: #ff4040;
                cursor: pointer;
                font-weight: bold;
            }

                .logout-toast .close-toast:hover {
                    color: #ff0000;
                }

        @@keyframes toastFadeIn {
            from

        {
            opacity: 0;
            transform: translateX(-50%) translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

        }

        /* Custom Mobile Nav Enhancements */
        @@media (max-width: 767px) {
            .navbar-collapse

        {
            background: #8b0000;
            padding: 1rem;
            border-radius: 10px;
        }

        .navbar-toggler {
            border-color: #ffcc00;
        }

        .nav-item a {
            padding: 0.75rem 1rem;
            font-size: 1rem;
            border-bottom: 1px solid #b22222;
        }

        .nav-link {
            font-size: 1rem;
        }

        }
    </style>
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <span style="font-family: 'Cinzel Decorative', serif; font-size: 1.5rem; color: white;">TFTT</span>
                    <img src="~/images/dndiconhome.png" alt="TFTT Logo" style="height: 32px; vertical-align: middle;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "fw-bold" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Character" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "fw-bold" : "")"
                               asp-controller="Character" asp-action="Index">Bounty Board</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Character" && ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "fw-bold" : "")"
                               asp-controller="Character" asp-action="Create">Create Character</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "fw-bold" : "")"
                                   asp-controller="Admin" asp-action="Dashboard">
                                    🛡️ Admin Panel
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "fw-bold" : "")"
                                   asp-area="Identity" asp-page="/Account/Manage/Profile">
                                    <img src="@ViewBag.NavAvatar" alt="Avatar" class="avatar-topnav me-1"
                                         onerror="this.src='/images/icons/user.png'" />
                                    My Hero Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-no-highlight" asp-area="Identity" asp-page="/Account/Retire">Retire</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="mt-5 text-center">
        <hr />
        <p class="text-muted">
            &copy; 2025 - Tales From The Tavern | Crafted by the ArchMage Ophec🧙‍♂️
        </p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Flash Toast -->
    @if (TempData["LogoutMessage"] is string msg)
    {
        <div class="logout-toast" id="logoutToast">
            <button class="close-toast" onclick="document.getElementById('logoutToast').remove()">×</button>
            <div class="logout-text">
                <i class="lucide" data-lucide="scroll-text" style="margin-right: 8px;"></i>
                @msg
            </div>
        </div>
        <script>
            const pourSound = new Audio('/sounds/drink-pour.mp3');
            pourSound.play();

            setTimeout(() => {
                const t = document.getElementById('logoutToast');
                if (t) t.style.opacity = '0';
            }, 3000);

            setTimeout(() => {
                const t = document.getElementById('logoutToast');
                if (t) t.remove();
            }, 3800);

            lucide.createIcons();
        </script>
    }

    <!-- Navbar Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const customToggle = document.getElementById('customToggle');
            const navbarCollapse = document.getElementById('mainNavbar');

            if (customToggle && navbarCollapse) {
                customToggle.addEventListener('click', function () {
                    const bsCollapse = new bootstrap.Collapse(navbarCollapse, { toggle: true });
                });
            }

            const navLinks = document.querySelectorAll('.navbar-collapse .nav-link');
            navLinks.forEach(function (link) {
                link.addEventListener('click', function () {
                    const bsCollapse = new bootstrap.Collapse(navbarCollapse);
                    bsCollapse.hide();
                });
            });
        });
    </script>

    <script src="~/js/profile.js"></script>
    <script src="~/js/character-creator.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
