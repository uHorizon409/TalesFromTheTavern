const retireBtn = document.getElementById("retireBtn");

retireBtn.addEventListener("click", () => {
    const userConfirmation = confirm("Are you sure you want to retire to the tavern and finish your adventure?");

    if (userConfirmation) {
        console.log("🏁 Retirement confirmed. Unlocking cover...");

