@model DnDWebpage.Models.CharacterViewModel

@{
    ViewData["Title"] = "A New Hero Emerges!";
    Layout = "~/Views/Shared/_ParchmentLayout.cshtml";

    var statMap = new Dictionary<string, string>
    {
        { "STR", "Strength" },
        { "DEX", "Dexterity" },
        { "CON", "Constitution" },
        { "INT", "Intelligence" },
        { "WIS", "Wisdom" },
        { "CHA", "Charisma" }
    };
}

<div class="character-created-wrapper">
    <!-- 🌫️ Mist Overlay -->
    <div class="mist-overlay"></div>

    <div class="character-banner">
        <h1 class="glow">@Model.Name</h1>
        <p class="subtitle">has entered the realm!</p>
    </div>

    <div class="character-card">
        <div class="character-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" onerror="this.src='/images/icons/user.png'" />
        </div>

        <div class="character-details">
            <p><strong>Class:</strong> <span>@Model.Class</span></p>
            <p><strong>Race:</strong> <span>@Model.Race</span></p>
            <p><strong>Level:</strong> <span>@Model.Level</span></p>
            <p class="backstory">@Model.Background</p>

            <div class="stat-block">
                <h4>Stats & Modifiers</h4>
                <div class="stat-grid">
                    @foreach (var stat in statMap.Keys)
                    {
                        var prop = Model.GetType().GetProperty(statMap[stat]);
                        var score = prop != null ? (int)prop.GetValue(Model) : 10;
                        var modifier = (score - 10) / 2;
                        var modString = modifier >= 0 ? $"+{modifier}" : modifier.ToString();

                        <div class="stat-box">
                            <span class="stat-label">@stat</span>
                            <span class="stat-score">@score</span>
                            <span class="stat-modifier">(@modString)</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="character-actions">
        <a href="/Character/Create" class="btn btn-primary pulse">
             Forge Another Hero
        </a>
        <a href="/" class="btn btn-outline-light pulse">
             Seek An Adventure
        </a>
    </div>
</div>

<style>
    .character-created-wrapper {
        position: relative;
        background: url('/images/parchment-background.jpg') repeat;
        padding: 4rem 2rem;
        font-family: 'Cinzel Decorative', serif;
        text-align: center;
        animation: fadeIn 1.5s ease-in-out;
        overflow: hidden;
    }

    .mist-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/mist.gif') center/cover no-repeat;
        opacity: 0.1;
        z-index: 0;
        pointer-events: none;
    }

    .character-banner {
        position: relative;
        z-index: 1;
    }

    .glow {
        font-size: 3.5rem;
        color: #d4af37;
        text-shadow: 0 0 15px #ffd700, 0 0 30px #ffcc00;
        animation: glowText 2s ease-in-out infinite alternate;
    }

    .subtitle {
        font-size: 1.5rem;
        font-family: 'MedievalSharp', cursive;
        color: #f8f2dc;
        margin-bottom: 2rem;
    }

    .character-card {
        background: rgba(36, 18, 5, 0.95);
        border: 3px double #cba96b;
        padding: 2rem;
        border-radius: 12px;
        max-width: 900px;
        margin: auto;
        box-shadow: 0 0 40px rgba(0,0,0,0.8);
        display: flex;
        align-items: center;
        gap: 2rem;
        justify-content: center;
        flex-wrap: wrap;
        position: relative;
        z-index: 1;
    }

    .character-image img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid #cba96b;
        box-shadow: 0 0 20px #000;
    }

    .character-details {
        color: #f0e6d2;
        font-size: 1.2rem;
        text-align: left;
        max-width: 400px;
    }

        .character-details span {
            font-weight: bold;
            color: #fff;
        }

    .backstory {
        margin-top: 1rem;
        font-style: italic;
        font-family: 'Garamond', serif;
        color: #ddd;
    }

    .stat-block {
        margin-top: 2rem;
    }

    .stat-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .stat-box {
        background-color: #1e0f06;
        border: 2px solid #cba96b;
        border-radius: 8px;
        padding: 0.75rem;
        text-align: center;
        font-family: 'MedievalSharp', cursive;
        box-shadow: 0 0 15px rgba(0,0,0,0.6);
    }

    .stat-label {
        display: block;
        font-size: 1.1rem;
        color: #f8f2dc;
    }

    .stat-score {
        font-size: 1.3rem;
        color: #fff;
        font-weight: bold;
    }

    .stat-modifier {
        font-size: 1.1rem;
        color: #ffd700;
    }

    .character-actions {
        margin-top: 2.5rem;
        position: relative;
        z-index: 1;
    }

        .character-actions .btn {
            margin: 0 1rem;
            font-family: 'MedievalSharp', cursive;
            padding: 0.8rem 1.5rem;
            font-size: 1.2rem;
            transition: transform 0.2s ease-in-out;
        }

            .character-actions .btn:hover {
                transform: scale(1.05);
            }

    .pulse {
        animation: pulseGlow 2s infinite;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes glowText {
        from

    {
        text-shadow: 0 0 5px #ffd700;
    }

    to {
        text-shadow: 0 0 20px #ffcc00, 0 0 40px #ffd700;
    }

    }

    @@keyframes pulseGlow {
        0%

    {
        box-shadow: 0 0 5px #d4af37;
    }

    50% {
        box-shadow: 0 0 20px #d4af37;
    }

    100% {
        box-shadow: 0 0 5px #d4af37;
    }

    }
</style>
