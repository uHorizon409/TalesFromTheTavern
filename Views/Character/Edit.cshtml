@model DnDWebpage.Models.CharacterViewModel
@{
    ViewData["Title"] = "Edit Character";
}

<h1>Edit @Model.Name</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Race"></label>
        <input asp-for="Race" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Level"></label>
        <input asp-for="Level" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/Character/Index" class="btn btn-secondary">Cancel</a>
</form>

