@model List<DnDWebpage.Models.CharacterViewModel>
@{
    ViewData["Title"] = "Delete Any Character";
    Layout = "~/Views/Shared/_ParchmentLayout.cshtml";
}

<h1 class="text-warning text-center mb-4">🗡️ Remove Characters from the Realm</h1>

<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Race</th>
            <th>Level</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Class</td>
                <td>@c.Race</td>
                <td>@c.Level</td>
                <td>@(c.User?.UserName ?? "Unknown")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post" asp-antiforgery="true">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete @c.Name?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
